<body>
    <title>Class Code</title>
    <center>
  <center><p>REGISTERED STUDENTS</p></center>
  <table>
  <tr>
    <th>Student Number</th>
    <th>First Name</th>
    <th>Middle Name</th>
    <th>Last Name</th>
    <th>Section Name</th>
    <th></th>
  </tr>

  <% @users = User.all %>
  <% @users.each do |user| %>

  <tr>
      <td> <%=user.studentnum %> </td>
      <td> <%=user.firstname %> </td>
      <td><%=user.middlename %> </td>
      <td><%=user.lastname %> </td>
      <td><%=user.sectionname %> </td>
      <td><%= link_to 'Delete', users_index_path(users_homepage_path),
              method: :delete %></td>
    </tr>
  </tr>
  <% end %>
  </table>
</center>

<center>
<%= link_to '<button type="button">Add</button>'.html_safe, users_add_path %>&nbsp;
<%= link_to '<button type="button">Back</button>'.html_safe,users_homepage_path %>
</center>
  <style>
  body{
    background-color: #FFFACD;
    margin: auto;
  }
  button {
      background-color: #4CAF50;
      color: white;
      padding: 1% 3%;
      margin: 2% 0;
      border: none;
      cursor: pointer;
      width: 15%;
      opacity: 0.9;z
  }
  table{
    width: 85%;
    padding: 3%;
    border: 1px solid black;
    margin-left:2%;
    height: inherit;
  }
  th{
    font-size: 15pt;
    text-align: left;
    border: 1px solid black;
  }
  td{
      border: 1px solid black;
  }
  p{
    margin-top: 5%;
    font-size: 30pt;
  }
  </style>
</body>
